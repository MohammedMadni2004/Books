generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(cuid())
  name      String
  email     String      @unique
  password  String
  reviews   Review[]    
  role      UserRole    @default(USER)
}

model Book {
  id        String    @id @default(cuid())
  name      String
  author    String            
  reviews   Review[]
}

model Review {
  id          String  @id @default(cuid())
  title       String
  description String
  User        User?   @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId      String?
  Book        Book    @relation(fields: [bookId], references: [id], onDelete: Cascade)
  bookId      String
}

enum UserRole {
  USER
  ADMIN
}
